<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1E2E8"
    tools:context=".EstanteriaActivity">

    <Button
        android:id="@+id/btnSeeAll"
        android:layout_width="304dp"
        android:layout_height="44dp"
        android:layout_marginTop="64dp"
        android:background="#FFFFFF"
        android:text="@string/btnEditProfile"
        android:textColor="#215C22"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTittle"
        tools:text="ALL"
        tools:textStyle="bold" />

    <Button
        android:id="@+id/btnReading"
        android:layout_width="304dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:background="#FFFFFF"
        android:text="@string/btnEditProfile"
        android:textColor="#215C22"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSeeAll"
        tools:text="READING"
        tools:textStyle="bold" />

    <Button
        android:id="@+id/btnWantTo"
        android:layout_width="304dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:background="#FFFFFF"
        android:text="@string/btnEditProfile"
        android:textColor="#215C22"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRead"
        tools:text="WANT TO READ"
        tools:textStyle="bold" />

    <Button
        android:id="@+id/btnRead"
        android:layout_width="304dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:background="#FFFFFF"
        android:text="@string/btnEditProfile"
        android:textColor="#215C22"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnReading"
        tools:text="READ"
        tools:textStyle="bold" />

    <TextView
        android:id="@+id/tvTittle"
        android:layout_width="238dp"
        android:layout_height="42dp"
        android:layout_marginTop="124dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/tertiary_text_dark"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="BOOK SHELVES" />

</androidx.constraintlayout.widget.ConstraintLayout>